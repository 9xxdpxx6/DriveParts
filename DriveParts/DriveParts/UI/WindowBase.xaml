<Window x:Class="DriveParts.WindowBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriveParts"
        mc:Ignorable="d"
        Title="DRIVE PARTS" MinHeight="650" MinWidth="900" WindowStartupLocation="CenterScreen" Background="#F0F0F0" Icon="../Resources/drivePartsIcon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Margin="5" HorizontalAlignment="Left" Focusable="False" Source="../Resources/drivePartsLogoLight.png"></Image>
        <TextBlock x:Name="TextTitle" Text="{Binding ElementName=FrameBase, Path=Content.Title}" FontSize="30" Focusable="False" Foreground="#FFFFFF"/>
        <Button x:Name="BtnBack" Content="Назад" HorizontalAlignment="Right" Click="BtnBack_Click"/>
        <Grid Background="#303030" Grid.Row="0" Panel.ZIndex="-2" Focusable="False"></Grid>
        <Frame x:Name="FrameBase" NavigationUIVisibility="Hidden" Focusable="False" Grid.Row="1" ContentRendered="FrameBase_ContentRendered"/>
        <Grid Grid.Row="2" Background="#303030" Focusable="False"></Grid>
    </Grid>
</Window>
