<Page x:Class="DriveParts.UI.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DriveParts.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DRIVE PARTS">

    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="30"/>
            <TextBlock Text="Логин:" FontSize="20" HorizontalAlignment="Left" Margin="5"/>
            <TextBox x:Name="TbLogin" TextChanged="TbLogin_TextChanged"/>
            <TextBlock Text="Пароль:" FontSize="20" HorizontalAlignment="Left" Margin="5"/>
            <Grid>
                <PasswordBox x:Name="PbPass" IsEnabled="False" LostFocus="PbPass_LostFocus"/>
                <TextBox x:Name="TbPassVisible" IsEnabled="False" Visibility="Hidden" LostFocus="TbPassVisible_LostFocus"/>
            </Grid>
            <CheckBox x:Name="CbShowPass" Content="Показать пароль" Margin="5" VerticalContentAlignment="Center" IsEnabled="False" Focusable="False" Click="CbShowPass_Click"/>
            <Button x:Name="BtnEnter" Content="Войти" Click="BtnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
