<UserControl x:Class="DriveParts.UI.UC.UCBrand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DriveParts.UI.UC"
             mc:Ignorable="d">
    <Grid>
        <Border CornerRadius="15" Padding="5 5 15 5" Margin="10" Background="#FFFFFF" Focusable="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="210"/>
                </Grid.ColumnDefinitions>
                <TextBox Style="{StaticResource TbReadOnly}" Grid.Column="0" Width="auto" Text="{Binding BrandName}" FontSize="18" HorizontalAlignment="Left"/>
                <Button Content="Редактировать" Grid.Column="1" Name="BtnEdit" Click="BtnEdit_Click"/>
                <Button Content="Удалить" Grid.Column="2" Name="BtnRemove" Click="BtnRemove_Click"/>
            </Grid>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Color="#909090" Opacity="0.35"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
