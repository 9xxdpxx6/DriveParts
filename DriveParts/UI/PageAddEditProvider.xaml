<Page x:Class="DriveParts.UI.PageAddEditProvider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DriveParts.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление поставщика">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="150 15" Grid.Row="0">
            <TextBlock Text="Наименование:" FontSize="15" HorizontalAlignment="Left"/>
            <TextBox x:Name="TbProviderName" Text="{Binding ProviderName}"/>
            <TextBlock Text="Код:" FontSize="15" HorizontalAlignment="Left"/>
            <TextBox x:Name="TbCode" Text="{Binding Code}"/>
        </StackPanel>
        <Border Grid.Row="1" BorderThickness="0 1 0 0" BorderBrush="#909090">
            <Button x:Name="BtnSave" Content="Сохранить" Click="BtnSave_Click"/>
        </Border>
    </Grid>
</Page>
